{
  "arrowParens": "avoid",
  "semi": false,
  "tabWidth": 2,
  "useTabs": false,
  "trailingComma": "none",
  "parser": "typescript",
  "overrides": [
    {
      "files": ["**/*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.md"],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ["**/*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["**/*.css"],
      "options": {
        "parser": "css"
      }
    }
  ]
}
